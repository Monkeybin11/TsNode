<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:TsNode.Controls;assembly=Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tsProperty="clr-namespace:TsProperty;assembly=TsProperty"
    Title="MainWindow"
    Width="1280"
    Height="780"
    d:DataContext="{d:DesignInstance local:MainWindowVm}"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowVm />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <WrapPanel>
            <Button Command="{Binding UndoCommand}" Content="Undo" />
            <Button Command="{Binding RedoCommand}" Content="Redo" />
            <GroupBox HorizontalAlignment="Left" Height="163" VerticalAlignment="Top" Width="200" Margin="332,130,0,0" >
                <GroupBox.Header>
                    <CheckBox Content="ほげほげ" x:Name="hogehoge"/>
                </GroupBox.Header>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEnabled="{Binding ElementName=hogehoge,Path=IsChecked}">
                    <Label Content="fugafuga[mm]"    HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TextBox_fugafufa"   HorizontalAlignment="Left" Height="22" Margin="50,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </GroupBox>
        </WrapPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <controls:NetworkView
                DataContext="{Binding NetworkVm}"
                Grid.Column="0"
                Width="4096"
                Height="4096"
                Background="DarkGray"
                CompetedMoveNodeCommand="{Binding NodeMoveCommand}"
                CompletedCreateConnectionCommand="{Binding ConnectCommand}"
                Connections="{Binding Connections}"
                Nodes="{Binding Nodes}"
                SelectionChangedCommand="{Binding SelectionChangedCommand}"
                StartCreateConnectionCommand="{Binding StartNewConnectionCommand}" />
            <ListView
                Grid.Column="1"
                Width="200"
                ItemsSource="{Binding Operations}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <WrapPanel.Style>
                                <Style TargetType="{x:Type WrapPanel}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRedo}" Value="True">
                                            <Setter Property="Opacity" Value="0.5" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </WrapPanel.Style>

                            <Button Command="{Binding GotoCommand}" Content="Goto" />
                            <TextBlock Text="{Binding Name}" />
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ItemsControl
                Grid.Column="2"
                Width="300"
                DataContext="{Binding NetworkVm}"
                ItemsSource="{Binding Properties}">
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
