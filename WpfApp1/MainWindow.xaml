<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:TsNode.Controls;assembly=Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tsProperty="clr-namespace:TsProperty;assembly=TsProperty"
    Title="MainWindow"
    Width="1280"
    Height="780"
    d:DataContext="{d:DesignInstance local:MainWindowVm}"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowVm />
    </Window.DataContext>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <WrapPanel>
            <Button Command="{Binding UndoCommand}" Content="Undo" />
            <Button Command="{Binding RedoCommand}" Content="Redo" />
        </WrapPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <controls:NetworkView
                DataContext="{Binding NetworkVm}"
                Grid.Column="0"
                Width="4096"
                Height="4096"
                Background="DarkGray"
                CompetedMoveNodeCommand="{Binding NodeMoveCommand}"
                CompletedCreateConnectionCommand="{Binding ConnectCommand}"
                Connections="{Binding Connections}"
                Nodes="{Binding Nodes}"
                SelectionChangedCommand="{Binding SelectionChangedCommand}"
                StartCreateConnectionCommand="{Binding StartNewConnectionCommand}" />
            <ListView
                Grid.Column="1"
                Width="200"
                ItemsSource="{Binding Operations}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <WrapPanel.Style>
                                <Style TargetType="{x:Type WrapPanel}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRedo}" Value="True">
                                            <Setter Property="Opacity" Value="0.5" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </WrapPanel.Style>

                            <Button Command="{Binding GotoCommand}" Content="Goto" />
                            <TextBlock Text="{Binding Name}" />
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ItemsControl
                Grid.Column="2"
                Width="300"
                DataContext="{Binding NetworkVm}"
                ItemsSource="{Binding Properties}">
                <ItemsControl.Resources >
                    <DataTemplate DataType="{x:Type tsProperty:ReadOnlyProperty}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding Name}" Grid.Column="0"/>
                            <TextBlock Text="{Binding Data}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type tsProperty:BindablePropertyBase}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding Name}" Grid.Column="0"/>
                            <TextBlock Text="{Binding Data}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type tsProperty:BindableDoubleProperty}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding Name}" Grid.Column="0"/>
                            <TextBox Text="{Binding Value , Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Width="40"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type tsProperty:BindableIntProperty}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding Name}" Grid.Column="0"/>
                            <TextBox Text="{Binding Value , Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Width="40"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type tsProperty:BindableStringProperty}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding Name}" Grid.Column="0"/>
                            <TextBox Text="{Binding Value , Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Width="40"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type tsProperty:BindableBoolProperty}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding Name}" Grid.Column="0"/>
                            <CheckBox IsChecked="{Binding Value , Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Width="40"/>
                        </Grid>
                    </DataTemplate>

                </ItemsControl.Resources>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
